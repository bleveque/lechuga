{
	// required fields
	"manifest_version": 2,
	"name": "Lechuga",
	"version": "1.0.0",

	// "default_locale": "en",
	"description": "Monitor Chrome usage",
	"icons": {
		"128": "images/icon128.png",
		"48": "images/icon48.png",
		"16": "images/icon16.png"
	},

	// permissions
	"permissions": [
		"browsingData",
		"processes",
		"tabs"
	],

	"background": {
		"scripts": ["background.js"]
	},

	"browser_action": {
		"default_icon": "images/icon16.png",
     	"default_title": "Lechuga",
		"default_popup": "popup.html"
	}
}